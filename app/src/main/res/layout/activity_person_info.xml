<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_page">

<RelativeLayout style="@style/topbar_bg" >

    <ImageButton style="@style/topbar_return_img" />

    <TextView
        style="@style/topbar_title"
        android:layout_centerHorizontal="true"
        android:text="详细资料" />
</RelativeLayout>

<View style="@style/divider_horizontal_1px" />

<ScrollView
    style="@style/match_match"
    android:layout_weight="1" >

    <LinearLayout style="@style/ll_vertical_match_match" >

        <!-- 这些方式也可<<<<<<<<<<<<<<<<<<< -->
        <!-- <zblibrary.demo.view.BaseViewLayout -->
        <!-- android:id="@+id/bvlUser" -->
        <!-- style="@style/match_wrap" > -->
        <!-- </zblibrary.demo.view.BaseViewLayout> -->


        <!-- <zblibrary.demo.view.UserViewLayout -->
        <!-- android:id="@+id/uvlUser" -->
        <!-- style="@style/match_wrap" > -->
        <!-- </zblibrary.demo.view.UserViewLayout> -->
        <!-- 这些方式也可>>>>>>>>>>>>>>>>>>> -->

        <LinearLayout
            android:id="@+id/llUserBusinessCardContainer"
            style="@style/ll_vertical_match_wrap"
            android:layout_marginBottom="@dimen/padding_huge"
            android:layout_marginTop="@dimen/padding_huge" >
        </LinearLayout>

        <View style="@style/divider_horizontal_1px" />

        <LinearLayout style="@style/edit_item" >

            <TextView
                style="@style/edit_item_left_tv"
                android:text="备注" />

            <EditText
                android:id="@+id/etUserRemark"
                style="@style/edit_item_right_et"
                android:layout_weight="1"
                android:maxLength="90"
                android:hint="点击这里来编辑"
                android:importantForAutofill="no" />

            <ImageView
                android:id="@+id/ivUserRemarkClear"
                style="@style/edit_item_right_clear" />
        </LinearLayout>

        <View
            style="@style/divider_horizontal_1px"
            android:layout_marginBottom="@dimen/padding_huge" />

        <View style="@style/divider_horizontal_1px" />

        <LinearLayout
            android:id="@+id/ll_userName"
            style="@style/content_item_white">

            <TextView
                style="@style/content_item_lf_tv_black"
                android:text="姓名"
                />

            <TextView
                android:id="@+id/tv_userName_info"
                style="@style/content_item_rt_tv"
                android:layout_weight="1"
                android:text="Android" />

            <ImageView style="@style/content_item_rt_img" />


        </LinearLayout>

        <LinearLayout
            android:id = "@+id/etll_userName"
            style="@style/edit_item"
            android:visibility="gone">

            <TextView
                style="@style/edit_item_left_tv"
                android:text="姓名" />

            <EditText
                android:id="@+id/et_userName"
                style="@style/edit_item_right_et"
                android:layout_weight="1"
                android:maxLength="90"
                android:hint="点击这里来编辑"
                android:importantForAutofill="no"
                />

            <ImageView
                android:id="@+id/iv_userNameClear"
                style="@style/edit_item_right_clear"
                />
        </LinearLayout>

        <View style="@style/divider_horizontal_1px" />

        <LinearLayout style="@style/content_item_white"
            android:id="@+id/ll_sex">

            <TextView
                style="@style/content_item_lf_tv_black"
                android:text="性别" />

            <TextView
                style="@style/content_item_rt_tv"
                android:id="@+id/tv_sex_info"
                android:layout_weight="1"
                android:text="浙江杭州" />

            <ImageView style="@style/content_item_rt_img" />
        </LinearLayout>

        <LinearLayout
            android:id = "@+id/etll_sex"
            style="@style/edit_item"
            android:visibility="gone">

            <TextView
                style="@style/edit_item_left_tv"
                android:text="性别" />

            <EditText
                android:id="@+id/et_sex"
                style="@style/edit_item_right_et"
                android:layout_weight="1"
                android:maxLength="90"
                android:hint="点击这里来编辑"
                android:importantForAutofill="no"
                />

            <ImageView
                android:id="@+id/iv_sexClear"
                style="@style/edit_item_right_clear"
                />
        </LinearLayout>

        <View style="@style/divider_horizontal_1px" />

        <LinearLayout style="@style/content_item_white"
            android:id="@+id/ll_birthday">

            <TextView
                style="@style/content_item_lf_tv_black"
                android:text="出生日期" />

            <TextView
                style="@style/content_item_rt_tv"
                android:id="@+id/tv_birthday_info"
                android:layout_weight="1"
                android:text="123456789@qq.com" />

            <ImageView style="@style/content_item_rt_img" />
        </LinearLayout>

        <LinearLayout
            android:id = "@+id/etll_birthday"
            style="@style/edit_item"
            android:visibility="gone">

            <TextView
                style="@style/edit_item_left_tv"
                android:text="出生日期" />

            <EditText
                android:id="@+id/et_birthday"
                style="@style/edit_item_right_et"
                android:layout_weight="1"
                android:maxLength="90"
                android:hint="点击这里来编辑"
                android:importantForAutofill="no"
                />

            <ImageView
                android:id="@+id/iv_birthdayClear"
                style="@style/edit_item_right_clear"
                />
        </LinearLayout>

        <View style="@style/divider_horizontal_1px" />

        <LinearLayout style="@style/content_item_white"
            android:id="@+id/ll_wechat">

            <TextView
                style="@style/content_item_lf_tv_black"
                android:text="微信" />

            <TextView
                style="@style/content_item_rt_tv"
                android:layout_weight="1"
                android:id="@+id/tv_wechat_info"
                android:text="123456789@qq.com" />

            <ImageView style="@style/content_item_rt_img" />
        </LinearLayout>
        <LinearLayout
            android:id = "@+id/etll_wechat"
            style="@style/edit_item"
            android:visibility="gone">

            <TextView
                style="@style/edit_item_left_tv"
                android:text="出生日期" />

            <EditText
                android:id="@+id/et_wechat"
                style="@style/edit_item_right_et"
                android:layout_weight="1"
                android:maxLength="90"
                android:hint="点击这里来编辑"
                android:importantForAutofill="no"
                />

            <ImageView
                android:id="@+id/iv_wechatClear"
                style="@style/edit_item_right_clear"
                />
        </LinearLayout>

        <View style="@style/divider_horizontal_1px" />

        <LinearLayout style="@style/content_item_white"
            android:id="@+id/ll_area">

            <TextView
                style="@style/content_item_lf_tv_black"
                android:text="所在地区" />

            <TextView
                style="@style/content_item_rt_tv"
                android:layout_weight="1"
                android:id="@+id/tv_area_info"
                android:text="hubei" />

            <ImageView style="@style/content_item_rt_img" />
        </LinearLayout>
        <LinearLayout
            android:id = "@+id/etll_area"
            style="@style/edit_item"
            android:visibility="gone">

            <TextView
                style="@style/edit_item_left_tv"
                android:text="出生日期" />

            <EditText
                android:id="@+id/et_area"
                style="@style/edit_item_right_et"
                android:layout_weight="1"
                android:maxLength="90"
                android:hint="点击这里来编辑"
                android:importantForAutofill="no"
                />

            <ImageView
                android:id="@+id/iv_areaClear"
                style="@style/edit_item_right_clear"
                />
        </LinearLayout>
        <View style="@style/divider_horizontal_1px" />

        <LinearLayout style="@style/content_item_white"
            android:id="@+id/ll_address">

            <TextView
                style="@style/content_item_lf_tv_black"
                android:text="详细地址" />

            <TextView
                android:id="@+id/tv_address_info"
                style="@style/content_item_rt_tv"
                android:layout_weight="1"
                android:text="详细地址" />

            <ImageView style="@style/content_item_rt_img" />
        </LinearLayout>
        <LinearLayout
            android:id = "@+id/etll_address"
            style="@style/edit_item"
            android:visibility="gone">

            <TextView
                style="@style/edit_item_left_tv"
                android:text="出生日期" />

            <EditText
                android:id="@+id/et_address"
                style="@style/edit_item_right_et"
                android:layout_weight="1"
                android:maxLength="90"
                android:hint="点击这里来编辑"
                android:importantForAutofill="no"
                />

            <ImageView
                android:id="@+id/iv_addressClear"
                style="@style/edit_item_right_clear"
                />
        </LinearLayout>

        <View style="@style/divider_horizontal_1px" />
    </LinearLayout>
</ScrollView>

<View style="@style/divider_horizontal_1px" />

<LinearLayout
    android:id="@+id/llUserBottomMenuContainer"
    style="@style/ll_vertical_match_wrap" >
</LinearLayout>
</LinearLayout>
