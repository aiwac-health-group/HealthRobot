<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ll_horizontal_match_wrap"
    android:background="@drawable/white_to_alpha"
    android:padding="10dp"
    android:id="@+id/view_notification">

    <LinearLayout
        style="@style/ll_vertical_match_wrap"
        android:gravity="left|center_vertical"
        android:paddingLeft="4dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="left|center_horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textview_is_read"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="[新]"
                android:textColor="@color/btn_red_normal"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textview_notification"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="这是一个消息"
                android:textStyle="bold" />

        </LinearLayout>




    </LinearLayout>
</LinearLayout>